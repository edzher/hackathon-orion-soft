<?xml version="1.0" encoding="UTF-8"?>
<configuration>
    <springProperty scope="context" name="applicationName" source="spring.application.name"/>
    <springProperty scope="context" name="dir" source="log.dir"/>
    <springProperty scope="context" name="logFormat" source="log.console-format"/>

    <appender name="COLOR_CONSOLE" class="ch.qos.logback.core.ConsoleAppender">
        <encoder>
            <pattern>%d{HH:mm:ss.SSS} [%thread] %-5level %highlight(%logger{36}) - %msg%n</pattern>
        </encoder>
    </appender>

    <appender name="JSON_CONSOLE" class="ch.qos.logback.core.ConsoleAppender">
        <encoder class="net.logstash.logback.encoder.LoggingEventCompositeJsonEncoder">
            <providers>
                <pattern>
                    <pattern>
                        {
                        "@timestamp": "%date{yyyy-MM-dd'T'HH:mm:ss.SSSX, UTC}",
                        "message": "%msg%n",
                        "logger": "%logger",
                        "level": "%level",
                        "process": {
                        "thread": {
                        "name": "%thread"
                        }
                        },
                        "service": {
                        "id": "${applicationName}",
                        "name": "${applicationName}"
                        }
                        }
                        }
                    </pattern>
                </pattern>
                <mdc/>
            </providers>
        </encoder>
    </appender>

    <if condition='p("logFormat").contains("json")'>
        <then>
            <root level="info">
                <appender-ref ref="JSON_CONSOLE"/>
            </root>
        </then>
        <else>
            <root level="info">
                <appender-ref ref="COLOR_CONSOLE"/>
            </root>
        </else>
    </if>
</configuration>